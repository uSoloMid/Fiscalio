services:
  - type: web
    name: fiscalio-sat-api-dev
    env: docker
    rootDir: sat-api
    plan: starter
    healthCheckPath: /api/health
    autoDeploy: true
    disk:
      name: fiscalio-sat-storage-dev
      mountPath: /var/www/storage
      sizeGB: 10
    envVars:
      - key: APP_ENV
        value: staging
      - key: APP_DEBUG
        value: "true"
      - key: LOG_CHANNEL
        value: stderr
      - key: APP_URL
        value: https://fiscalio-sat-api-dev.onrender.com
      - key: DB_CONNECTION
        value: sqlite
      - key: DB_DATABASE
        value: /var/www/storage/database_dev.sqlite
      - key: RUN_MIGRATIONS
        value: "true"
      # Requires APP_KEY secret in Render Dashboard

  - type: worker
    name: fiscalio-sat-scheduler-dev
    env: docker
    rootDir: sat-api
    plan: starter
    autoDeploy: true
    disk:
      name: fiscalio-sat-storage-dev
      mountPath: /var/www/storage
      sizeGB: 10
    envVars:
      - key: APP_ENV
        value: staging
      - key: APP_DEBUG
        value: "true"
      - key: LOG_CHANNEL
        value: stderr
      - key: APP_URL
        value: https://fiscalio-sat-api-dev.onrender.com
      - key: DB_CONNECTION
        value: sqlite
      - key: DB_DATABASE
        value: /var/www/storage/database_dev.sqlite
      # Requires APP_KEY secret in Render Dashboard
    startCommand: /entrypoint.sh php artisan schedule:work
